<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <!--=================-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.jaysan1292.project.c3062.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userprofile</servlet-name>
        <servlet-class>com.jaysan1292.project.c3062.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>post</servlet-name>
        <servlet-class>com.jaysan1292.project.c3062.servlets.PostDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>css</servlet-name>
        <servlet-class>com.jaysan1292.project.c3062.servlets.LessCssServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>commentprocessor</servlet-name>
        <servlet-class>com.jaysan1292.project.c3062.servlets.SubmitCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>aboutpage</servlet-name>
        <servlet-class>com.jaysan1292.project.c3062.servlets.AboutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>feed</servlet-name>
        <servlet-class>com.jaysan1292.project.c3062.servlets.FeedServlet</servlet-class>
    </servlet>
    <!--=================-->
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userprofile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>post</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>feed</servlet-name>
        <url-pattern>/feed</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>css</servlet-name>
        <url-pattern>/css/application.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>commentprocessor</servlet-name>
        <url-pattern>/post/comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aboutpage</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
    <!--=================-->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <listener>
        <listener-class>com.jaysan1292.project.c3062.util.ServerListener</listener-class>
    </listener>
</web-app>
